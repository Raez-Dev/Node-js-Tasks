<div class="mt-3 bg-light p-5">
    <h2>Ingrese Producto</h2>
    <form onsubmit="onSubmit()">
        <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input class="form-control" id="name" name="name" />
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Precio</label>
            <input class="form-control" id="price" name="price" />
        </div>
        <div class="mb-3">
            <label for="url" class="form-label">Foto URL</label>
            <input class="form-control" id="url" name="url" />
        </div>
        <button type="submit" class="btn btn-success">Enviar</button>
    </form>
</div>

<div class="mt-3 bg-light p-5">
    <h2>Vista de Productos</h2>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Foto</th>
            </tr>
        </thead>
        <tbody id="tableBody">
        </tbody>
    </table>
</div>

<div class="mt-3 bg-light p-5">
    <h2>Centro de mensajes</h2>

    <form>
        <div class="mb-3">
            <label for="mail" class="form-label">Email</label>
            <input class="form-control" id="mail" name="mail" />
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Mensaje</label>
            <input class="form-control" id="message" name="message" />
        </div>
        <button type="submit" class="btn btn-success"
            onclick="onSubmitMessage()"
        >Enviar</button>
    </form>
    <div class="mt-4" id="listaMensajes">


    </div>
</div>