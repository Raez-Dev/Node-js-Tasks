html
    head
        title="Pug Js"
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    body 
        nav(class="navbar navbar-light bg-light")
            div(class="container")
                span(class="navbar-brand mb-0 h1") Pug
        div(class="container")
            div(class="mt-3")
                h2 Vista de Productos
                
                if products
                    table(class="table table-dark table-striped")
                        thead
                            tr
                                th(scope="col") Nombre
                                th(scope="col") Precio
                                th(scope="col") Foto                    
                        tbody
                            each item in listProduct
                                tr
                                    th=item.name
                                    td=item.price
                                    td
                                        img(style="height: 30px;" src=item.url)                                                        
                            

                else
                    div(class="alert alert-warning" role="alert") No se encontraron productos                
                a(class="btn btn-success" href="../" role="button") Anterior
                
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js") 